{
    "name": "nebula-new-tab",
    "version": "1.0.0-alpha.1",
    "private": true,
    "description": "A clean and simple new tab page",
    "repository": {
        "type": "git",
        "url": "https://github.com/hkamran80/nebula-new-tab.git"
    },
    "scripts": {
        "dev:firefox": "web-ext run --source-dir dist",
        "dev:chromium": "web-ext run --source-dir dist --target chromium",
        "dev:opera": "web-ext run --source-dir dist --target chromium --chromium-binary /Applications/Opera.app/Contents/MacOS/Opera",
        "dev:edge": "web-ext run --source-dir dist --target chromium --chromium-binary '/Applications/Microsoft Edge.app/Contents/MacOS/Microsoft Edge'",
        "build": "rimraf dist build && mkdir build && tsc && rollup -c rollup.config.js",
        "build:watch": "onchange -i 'src/*' -- npm run build",
        "build:extension": "rimraf web-ext-artifacts && npm run build && web-ext build --source-dir dist",
        "prepare": "husky install"
    },
    "author": "H. Kamran",
    "license": "GPLV3",
    "devDependencies": {
        "@open-wc/building-rollup": "^1.10.0",
        "@types/jquery": "^3.5.6",
        "@types/webextension-polyfill": "^0.8.0",
        "autoprefixer": "^10.3.6",
        "deepmerge": "^4.2.2",
        "jquery": "^3.6.0",
        "onchange": "^7.1.0",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.58.0",
        "rollup-plugin-bundle-html-thomzz": "^1.2.0",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-execute": "^1.1.1",
        "rollup-plugin-terser": "^7.0.2",
        "tailwindcss": "^2.2.16",
        "tippy.js": "^6.3.2",
        "typescript": "^4.4.3",
        "web-ext": "^6.4.0",
        "webextension-polyfill": "^0.8.0",
        "husky": "^7.0.0"
    }
}
